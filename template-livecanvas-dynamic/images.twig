<section class="live-shortcode">
    [agnostic]

    {% set args = {
        'post_type': 'post',
        'posts_per_page': 10
    } %}

    {% set articles = Post(args) %}

    {% for article in articles %}
        <article>
            {% if article.thumbnail %}
                <img src="{{ article.thumbnail.src }}" alt="{{ article.thumbnail.alt }}" />
            {% endif %}
            <h2>{{ article.title }}</h2>
            <div>{{ article.content }}</div>
        </article>
    {% endfor %}

    [/agnostic]
</section>